-- Primeiro usuário (imagem)
PrimeiroUsuarioImg =
MAXX(
    TOPN(1, Usuarios, Usuarios[Colaborador], ASC),
    Usuarios[ImageBase64]
)

-- Segundo usuário (imagem)
SegundoUsuarioImg =
MAXX(
    TOPN(
        1,
        FILTER(
            Usuarios,
            Usuarios[Colaborador] <> MAXX(TOPN(1, Usuarios, Usuarios[Colaborador], ASC), Usuarios[Colaborador])
        ),
        Usuarios[Colaborador],
        ASC
    ),
    Usuarios[ImageBase64]
)

-- Terceiro usuário (imagem)
TerceiroUsuarioImg =
MAXX(
    TOPN(
        1,
        FILTER(
            Usuarios,
            NOT Usuarios[Colaborador] IN {
                MAXX(TOPN(1, Usuarios, Usuarios[Colaborador], ASC), Usuarios[Colaborador]),
                MAXX(
                    TOPN(
                        1,
                        FILTER(
                            Usuarios,
                            Usuarios[Colaborador] <> MAXX(TOPN(1, Usuarios, Usuarios[Colaborador], ASC), Usuarios[Colaborador])
                        ),
                        Usuarios[Colaborador],
                        ASC
                    ),
                    Usuarios[Colaborador]
                )
            }
        ),
        Usuarios[Colaborador],
        ASC
    ),
    Usuarios[ImageBase64]
)