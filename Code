        # ---------- NOVO: Pular Data de Inativação se status for ACTIV ----------
        if "Data de Inativação" in descricao:
            # 1) primeiro ver se já temos Status em resultados (rápido)
            status_colab = resultados.get("Status")
            if status_colab is not None:
                # já veio via step anterior
                if str(status_colab).strip().upper() == "ACTIV":
                    WebScrapping.log("⏭️ Pulando passo 'Data de Inativação' (colaborador ativo - encontrado em resultados).", "INFO")
                    continue
            else:
                # 2) se não está em resultados, tenta localizar o step 'Status' nos steps e ler direto do DOM com timeout curto
                status_by = None
                status_locator = None
                for s in steps:
                    if str(s.get("description") or "").strip().lower() == "status":
                        status_by, status_locator = self.loader.parse_locator(s)
                        break

                # tenta ler da página com WAIT curto (não bloqueante)
                try:
                    if status_by and status_locator:
                        short_wait = WebDriverWait(self.loader.driver, 3)  # 3s curto
                        status_elem = short_wait.until(EC.presence_of_element_located((status_by, status_locator)))
                        status_text = (status_elem.text or "").strip().upper()
                        if status_text == "ACTIV":
                            WebScrapping.log("⏭️ Pulando passo 'Data de Inativação' (colaborador ativo - lido do DOM).", "INFO")
                            continue
                    # se não encontramos o elemento ou não é ACTIV, segue normalmente
                except Exception:
                    # Falha em localizar status rapidamente -> NÃO bloquear: executa o passo normal
                    WebScrapping.log("⚠️ Não foi possível ler 'Status' rapidamente — executando 'Data de Inativação' normalmente.", "INFO")
