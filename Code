def action_get_text(self, by, locator, value=None, descricao=None, resultados=None, pin=None):
    """
    Função genérica para capturar texto de um elemento na página.
    - Serve para qualquer site (Jira, ServiceNow, Spirit, etc).
    - Se o elemento existir, captura o texto.
    - Se não existir ou estiver vazio, ignora silenciosamente.
    - Adapta-se automaticamente a casos em que existe um elemento de status (ex: 'etatPo'),
      onde só deve capturar valores se o status for 'CLOTURE'.
    """
    try:
        elem = self.wait.until(EC.presence_of_element_located((by, locator)))
        texto_elem = elem.text.strip() if elem.text else ""

        # Tentativa de detectar o elemento de status (sem depender do JSON)
        try:
            status_elem = self.driver.find_element(By.ID, "etatPo")
            status_text = status_elem.text.strip().upper()
        except Exception:
            status_text = None  # Pode não existir, e tudo bem

        # Regra adaptativa: se o status for ACTIF, ignora campos de data/desligamento
        if status_text == "ACTIF" and "/" in texto_elem:
            self.log(f"⏭️ Pulando '{descricao}' (colaborador ativo, data ignorada)", "INFO")
            return

        # Caso status seja CLOTURE, ou se o campo for genérico (sem status), captura normalmente
        if resultados is not None and descricao:
            resultados[descricao] = texto_elem
            self.log(f"✅ Capturado '{descricao}': {texto_elem}", "DEBUG")

    except Exception as e:
        self.log(f"⚠️ Não foi possível capturar '{descricao}': {e}", "INFO")
        pass
